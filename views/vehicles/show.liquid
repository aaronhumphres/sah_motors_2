{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ vehicle.title }} -
            {% if vehicle.ready %}
            Ready
            {% else %}
            Not Ready
            {%endif%}
        </h2>
        <h3>Amount: {{ vehicle.amount }}</h3>
        <h6>Body: {{ vehicle.body }}</h6>
        {% if vehicle.owner == userId %}
        <div class="btn-group">

            <a href="/vehicles/{{ vehicle.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/vehicles/{{ vehicle.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}